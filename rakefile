require 'rubygems'
require 'bundler'
require 'rake/testtask'

Bundler.setup(:default, :test)

namespace :test do
  Rake::TestTask.new(:unit) do |t|
    t.pattern = "test/unit/**/*_test.rb"
  end

  Rake::TestTask.new(:integration) do |t|
    t.pattern = 'test/integration/**/*_test.rb'
  end

end

task :default => 'test:unit'
